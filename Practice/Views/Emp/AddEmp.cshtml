@{
    ViewData["Title"] = "Add Employee";
}
@model Practice.Models.Emp
<form method="post">
    <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" required asp-for="Name">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="number" class="form-control" id="exampleInputPassword1" required asp-for="Salary">
    </div>
    <select class="form-control" asp-for="DepartmentName">
        @foreach (var item in ViewBag.Departments as List<Dept>)
        {
            <option value="@item.Deptname">@item.Deptname</option>
        }
    </select>

    <button type="submit" class="btn btn-primary mt-2">Submit</button>
</form>